{
    "manifest_version": 3,
    "name": "Watch Me: Accountability Buddy",
    "version": "1.0.0",
    "action": { "default_popup": "index.html" },
    "permissions": [
        "webRequest"
    ],
    "host_permissions": [
        "https://*/"
    ],
    "background": {
        "service_worker": "src/service-worker.ts",
        "type": "module"
    }
}
